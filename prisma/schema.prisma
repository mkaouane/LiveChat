generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Queue {
  id String @id @default(uuid())

  type    String
  content String

  author      String?
  authorId    String?
  authorImage String?

  submissionDate DateTime @default(now())
  executionDate  DateTime @default(now())
  duration       Int
  discordGuildId String

  @@index([type])
}

model Guild {
  id               String    @id
  busyUntil        DateTime?
  defaultMediaTime Int?
  maxMediaTime     Int?
  displayMediaFull Boolean   @default(false)
}

model Blacklist {
  id         String   @id @default(uuid())
  userId    String
  guildId   String
  createdAt DateTime @default(now())
  
  @@unique([userId, guildId])
  @@index([guildId])
}

model Vote {
  id         String   @id @default(uuid())
  targetUserId String
  guildId    String
  voterId    String
  createdAt  DateTime @default(now())
  
  @@unique([targetUserId, guildId, voterId])
  @@index([guildId])
}

model BlockedUser {
  id         String   @id @default(uuid())
  userId    String
  guildId   String
  blockedBy String
  createdAt DateTime @default(now())
  
  @@unique([userId, guildId])
  @@index([guildId])
}
